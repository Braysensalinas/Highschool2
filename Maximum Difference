#include <iostream>
using namespace std;

int main() {
    int arr[10] = {3,2,1,8,5,6,7,4,9,10} ;
  int max = arr[0] ; 
  int min = arr[9] ;
  int sum ;
   for(int i = 0 ; i < 10 ; i++){
       if(arr[i] > max){
          max = arr[i] ;
        }
    for(int j = 0 ; j < 10 ; j++){
        if(arr[j] < min){
            min = arr[j]  ; 
        }
        
     sum = max - min ;
       
       
    }
       
   }
      cout << sum << endl ;
    
    
	return 0;
}
